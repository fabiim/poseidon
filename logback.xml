<configuration scan="true">
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%level [%logger:%thread] %msg%n</pattern>
    </encoder>
  </appender>
  <root level="ERROR">
  	<priority value ="off" />
    <appender-ref ref="console" />
  </root>
</configuration>
